@{
    Layout = null;
}
@model MVCprojeto.Models.UserViewModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/MVCprojeto.styles.css" asp-append-version="true" />
<link href="~/css/login.css" rel="stylesheet" asp-append-version="true">
<section>
    
    <form method="POST" action="/Login/" class="p-2">
        <h1 class="text-center m-2">Autentitacação</h1>
        <br>
        <input class="form-control" type="text" name="email" value="@Model.Email" placeholder="Digite o seu e-mail/usuario" />
        <br>
        <input class="form-control" type="password" name="senha" value="@Model.Password" placeholder="Digite a sua senha" />
        <hr>

        <center>
            <a class="text-center" href="#">Esqueceu a senha</a>
            <br>
            <br>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-outline-success" type="submit">Login</button>
            </div>
            <br />
            <label class="form-label text-center">Não tem conta? <a href="#">Crie aqui</a></label>
        </center>
    </form>
  
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>